{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Auto-merge GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchDatasources": ["github-tags"],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "merge-queue"
    },
    {
      "description": "Auto merge terraform module digests",
      "matchDatasources": ["terraform-module"],
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["digest"],
      "automergeStrategy": "merge-queue"
    },
    {
      "description": "Auto merge go module digests",
      "matchDatasources": ["gomod"],
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["digest"],
      "automergeStrategy": "merge-queue"
    },
    {
      "description": "Auto merge Kubernetes/Flux/Helm minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "matchManagers": ["flux", "helm-values", "kubernetes", "helm-chart"],
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["digest"],
      "automergeStrategy": "merge-queue"
    }
  ]
}
