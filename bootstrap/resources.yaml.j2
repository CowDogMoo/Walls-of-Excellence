---
# 1Password Connect Secret for External Secrets
apiVersion: v1
kind: Secret
metadata:
  name: onepassword-secret
  namespace: external-secrets
type: Opaque
stringData:
  1password-credentials.json: |-
    op://automation/1password-credentials-secret/1password-credentials.json
  token: op://automation/1password-access-token-secret/credential
---
# SOPS Age Secret for Flux
apiVersion: v1
kind: Secret
metadata:
  name: sops-age
  namespace: flux-system
  annotations:
    reflector.v1.k8s.emberstack.com/reflection-allowed: "true"
    reflector.v1.k8s.emberstack.com/reflection-auto-enabled: "true"
type: Opaque
stringData:
  age.agekey: op://automation/woe age key/privateKey
---
# Cluster Settings ConfigMap
apiVersion: v1
kind: ConfigMap
metadata:
  name: cluster-settings
  namespace: flux-system
data:
  CLUSTER_NAME: woe
  TIMEZONE: America/Denver
